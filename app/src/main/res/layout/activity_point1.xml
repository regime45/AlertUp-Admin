<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#457588"
    tools:context=".point_1" >


    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="416dp"
        android:layout_height="610dp"
        map:layout_constraintBottom_toBottomOf="parent"
        map:layout_constraintEnd_toEndOf="parent"
        map:layout_constraintStart_toStartOf="parent"
        map:layout_constraintTop_toTopOf="parent"
        map:layout_constraintVertical_bias="1.0" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="0dp"
        android:background="#457588"
        android:elevation="2dp"
        android:textColor="#E1B1B1"
        app:itemIconSize="30dp"
        app:itemIconTint="#FFFFFF"
        app:itemRippleColor="#FFFFFF"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/activity_fire"
        map:layout_constraintBottom_toBottomOf="@+id/map"
        map:layout_constraintTop_toTopOf="parent"
        map:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteX="0dp" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/maps"

        android:layout_width="410dp"
        android:layout_height="47dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="0dp"
        android:background="#457588"
        android:elevation="2dp"
        android:textColor="#E1B1B1"
        app:itemIconSize="30dp"
        app:itemIconTint="#FFFFFF"
        app:itemRippleColor="#FFFFFF"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/map_options"
        map:layout_constraintBottom_toTopOf="@+id/map"
        map:layout_constraintEnd_toEndOf="parent"
        map:layout_constraintHorizontal_bias="1.0"
        map:layout_constraintStart_toStartOf="parent"
        map:layout_constraintTop_toTopOf="parent"
        map:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="158dp"
        android:layout_height="76dp"

        android:layout_marginBottom="25dp"
        android:text="Area : "
        android:textSize="20sp"
        android:textColor="#457588"
        android:gravity="center"
        map:layout_constraintBottom_toTopOf="@+id/maps"
        map:layout_constraintEnd_toEndOf="parent"
        map:layout_constraintHorizontal_bias="0.0"
        map:layout_constraintStart_toStartOf="parent"
        map:layout_constraintTop_toTopOf="parent"
        map:layout_constraintVertical_bias="0.038" />

    <TextView
        android:id="@+id/area"
        android:layout_width="253dp"
        android:layout_height="70dp"
        android:layout_marginBottom="25dp"
        android:gravity="center"
        android:text="TextView"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        map:layout_constraintBottom_toTopOf="@+id/maps"
        map:layout_constraintEnd_toEndOf="parent"
        map:layout_constraintHorizontal_bias="1.0"
        map:layout_constraintStart_toStartOf="parent"
        map:layout_constraintTop_toTopOf="parent"
        map:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>