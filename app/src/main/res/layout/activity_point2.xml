<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".geotag_location" >

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="422dp"
        android:layout_height="633dp"
        map:layout_constraintBottom_toBottomOf="parent"
        map:layout_constraintEnd_toEndOf="parent"
        map:layout_constraintStart_toStartOf="parent"
        map:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="413dp"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="0dp"
        android:layout_marginBottom="108dp"
        android:background="#457588"
        android:elevation="2dp"
        android:textColor="#E1B1B1"
        app:itemIconSize="30dp"
        app:itemIconTint="#FFFFFF"
        app:itemRippleColor="#FFFFFF"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/activity_fire"
        map:layout_constraintBottom_toBottomOf="parent"
        map:layout_constraintEnd_toEndOf="parent"
        map:layout_constraintStart_toStartOf="parent"
        map:layout_constraintTop_toBottomOf="@+id/map" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/maps"

        android:layout_width="410dp"
        android:layout_height="47dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="0dp"
        android:background="#457588"
        android:elevation="2dp"
        android:textColor="#E1B1B1"
        app:itemIconSize="30dp"
        app:itemIconTint="#FFFFFF"
        app:itemRippleColor="#FFFFFF"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/map_options"
        map:layout_constraintBottom_toTopOf="@+id/map"
        map:layout_constraintEnd_toEndOf="parent"
        map:layout_constraintHorizontal_bias="0.0"
        map:layout_constraintStart_toStartOf="parent"
        map:layout_constraintTop_toTopOf="parent"
        map:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/geo"
        android:layout_width="62dp"
        android:layout_height="64dp"
        android:layout_marginTop="598dp"
        android:layout_marginBottom="34dp"
        android:background="@drawable/ic_baseline_add_circle_outline_24"
        android:text=""
        map:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
        map:layout_constraintEnd_toEndOf="parent"
        map:layout_constraintHorizontal_bias="0.954"
        map:layout_constraintStart_toStartOf="parent"
        map:layout_constraintTop_toTopOf="@+id/maps"
        map:layout_constraintVertical_bias="1.0" />


</androidx.constraintlayout.widget.ConstraintLayout>